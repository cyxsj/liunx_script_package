<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wolfcode.p2p.base.mapper.LoginInfoMapper">

    <resultMap id="baseResultMap" type="cn.wolfcode.p2p.base.domain.LoginInfo">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="state" property="state"/>
        <result column="userType" property="userType"/>
        <result column="recommend" property="recommend"/>
    </resultMap>

    <resultMap id="simpleRessultMap" type="cn.wolfcode.p2p.base.domain.LoginInfo">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
    </resultMap>

    <insert id="inset" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO logininfo (userType, username, password, state,recommend)
          VALUES (#{userType},#{username}, #{password}, #{state},#{recommend})
    </insert>

    <select id="selectById" resultMap="baseResultMap">
        SELECT
            id,
            username,
            password,
            state,
            userType,
            recommend
        FROM logininfo
        WHERE id = #{id}
    </select>


    <select id="countByUsername" resultType="int">
        SELECT count(0)
        FROM logininfo
        WHERE username = #{username}
    </select>


    <select id="login" resultMap="baseResultMap">
        SELECT
            id,
            username,
            password,
            state,
            userType,
            recommend
        FROM logininfo
        WHERE username = #{username} AND password = #{password}
    </select>


    <select id="listByUserType" resultMap="baseResultMap">
      SELECT id,username,password,state,userType, recommend
      FROM logininfo WHERE userType = #{userType}
    </select>

</mapper>